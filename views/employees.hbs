{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.employeeID}}</td>
            <td>{{this.employeeFirstName}}</td>
            <td>{{this.employeeLastName}}</td>
            <td>{{this.employeeEmail}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/employees.hbs -->
<h2>Add a new Employee</h2>
<p>To add a new employee, please enter their information below and click `Submit`!</p>
<form id="add-employee-form" method="POST" action="/add-employee-form">
    <label for="input-employeeFirstName">First name: </label>
    <input type="text" name="input-employeeFirstName" id="input-employeeFirstName">
    
    <label for="input-employeeLastName">Last name: </label>
    <input type="text" name="input-employeeLastName" id="input-employeeLastName">

    <label for="input-employeeEmail">Email: </label>
    <input type="text" name="input-employeeEmail" id="input-employeeEmail">

    <input type="submit">
</form>